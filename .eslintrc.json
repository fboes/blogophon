{
  "root": true,
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "node": true,
    "es2017": true
  },
  "overrides": [
    {
      "files": ["lib/**/*.js", "bin/**/*.js", "test/**/*.js", "gulpfile.js"],
      "parserOptions": {
        "sourceType": "module"
      }
    },
    {
      "files": "test/**/*.js",
      "env": {
        "mocha": true
      }
    },
    {
      "files": "htdocs/**/*.js",
      "env": {
        "browser": true,
        "node": false,
        "es2017": false
      }
    }
  ]
}