{
  "root": true,
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "node": true,
    "es2017": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules":{
    "curly": "error",
    "eqeqeq": "error",
    "no-else-return": "error",
    "no-lonely-if": "error",
    "no-loop-func": "error",
    "no-multi-str": "error",
    "no-undef": "error",
    "no-unused-vars": "error",
    "no-var": "error",
    "object-shorthand": "error"
  },
  "overrides": [
    {
      "files": "test/**/*.js",
      "env": {
        "mocha": true
      }
    }
  ]
}