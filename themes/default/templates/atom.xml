<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{{config.language}}">
  <title>{{config.name}}</title>
  <link href="{{config.baseUrl}}{{config.basePath}}" />
  <id>{{config.baseUrl}}{{config.basePath}}</id>
  <updated>{{pubDate}}</updated>
  <link href="{{config.baseUrl}}{{config.basePath}}posts.atom" rel="self" />
  <author>
    <name>{{config.name}}</name>
  </author>
  {{#index}}
    <entry xml:lang="{{meta.Language}}" xml:base="{{config.baseUrl}}{{config.basePath}}">
      <title>{{meta.Title}}</title>
      <summary type="html"><![CDATA[{{{safeHtmlTeaser}}}]]></summary>
      <content type="html"><![CDATA[{{{safeHtml}}}]]></content>
      <link href="{{meta.AbsoluteUrl}}" />
      <updated>{{meta.Created.iso}}</updated>
      <id>{{meta.AbsoluteUrl}}</id>
      {{#meta.Tags}}
        <category term="{{title}}" />
      {{/meta.Tags}}
    </entry>
  {{/index}}
</feed>
