<?xml version="1.0" encoding="utf-8"?>
<rss xmlns:atom="http://www.w3.org/2005/Atom" version="2.0" xml:base="{{config.baseUrl}}{{config.basePath}}">
  <channel>
    <title>{{config.name}}</title>
    <link>{{config.baseUrl}}{{config.basePath}}</link>
    <description>{{config.description}}</description>
    <language>{{config.language}}</language>
    <lastBuildDate>{{pubDate}}</lastBuildDate>
    <atom:link href="{{config.baseUrl}}{{config.basePath}}posts.rss" rel="self" type="application/rss+xml" />
    {{#index}}
      <item>
        <title>{{meta.Title}}</title>
        <description><![CDATA[{{{safeHtmlTeaser}}}]]></description>
        <link>{{meta.AbsoluteUrl}}</link>
        <pubDate>{{meta.Created.rfc}}</pubDate>
        <guid isPermaLink="true">{{meta.AbsoluteUrl}}</guid>
        {{#meta.Tags}}
          <category>{{title}}</category>
        {{/meta.Tags}}
      </item>
    {{/index}}
  </channel>
</rss>
