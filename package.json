{
  "name": "blogophon",
  "version": "2.1.6",
  "description": "A Static Site Generator supporting Markdown, responsive images, RSS and other RESTable files. Built with Node.js and minimal dependencies.",
  "main": "./bin/blogophon",
  "repository": {
    "type": "git",
    "url": "git@github.com:fboes/blogophon.git"
  },
  "scripts": {
    "start": "node ./bin/blogophon",
    "generate": "node ./bin/blogophon-generate",
    "precommit": "eslint *.js bin/* lib/**/*.js test/**/*.js && mocha && stylelint htdocs/**/*.scss",
    "test": "eslint *.js bin/* lib/**/*.js test/**/*.js && mocha && stylelint htdocs/**/*.scss && npm outdated"
  },
  "homepage": "https://github.com/fboes/blogophon",
  "bugs": {
    "url": "https://github.com/fboes/blogophon/issues",
    "email": "info@3960.org"
  },
  "author": "Frank BoÃ«s <info@3960.org> (https://3960.org/)",
  "preferGlobal": true,
  "keywords": [
    "blog",
    "markdown",
    "mustache",
    "gulp",
    "static site generator"
  ],
  "devDependencies": {
    "autoprefixer": "^10.1.0",
    "beeper": "^2.0.0",
    "browser-sync": "^2.26.13",
    "eslint": "^7.16.0",
    "gulp": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "gulp-mocha": "^7.0.2",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-stylelint": "^13.0.0",
    "gulp-uglify": "^3.0.2",
    "husky": "^4.3.6",
    "mocha": "^8.2.1",
    "stylelint": "^13.8.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.18.0"
  },
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "bin": "bin",
    "test": "test",
    "user": "user",
    "data": "user/posts",
    "htdocs": "htdocs",
    "theme": "htdocs/themes"
  },
  "license": "MIT",
  "dependencies": {
    "dateformat": "^4.3.1",
    "fs-extra-promise": "^1.0.1",
    "glob": "^7.1.6",
    "gm": "^1.23.1",
    "handlebars": "^4.7.6",
    "inquirer": "^7.3.3",
    "inquirer-datepicker-prompt": "^0.4.2",
    "js-yaml": "^3.14.1",
    "marked": "^1.2.7",
    "shelljs": "^0.8.4"
  },
  "engine": {
    "node": ">=6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended-scss",
    "rules": {
      "no-descending-specificity": null,
      "no-empty-source": null
    },
    "ignoreFiles": "**/*.css"
  },
  "browserslist": [
    "cover 97%"
  ]
}
