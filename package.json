{
  "name": "blogophon",
  "version": "0.7.1",
  "description": "A small and simple Static Site Generator for blogs.",
  "main": "./index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:fboes/blogophon.git"
  },
  "bin": {
    "blogophon": "./index.js",
    "blogophon-generate": "./generate.js"
  },
  "scripts": {
    "start": "node ./index.js",
    "generate": "node ./generate.js",
    "precommit": "npm test",
    "test": "eslint src && eslint *.js && eslint test && nodeunit test"
  },
  "keywords": [
    "blog",
    "markdown",
    "mustache",
    "gulp",
    "static site generator"
  ],
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "beepbeep": "^1.2.0",
    "gulp": "^3.9.1",
    "gulp-eslint": "^3.0.1",
    "gulp-livereload": "^3.8.1",
    "gulp-nodeunit": "0.0.5",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.0.0",
    "gulp-shell": "^0.5.2",
    "gulp-uglify": "^2.0.0",
    "husky": "^0.11.9",
    "nodeunit": "^0.10.2"
  },
  "directories": {
    "doc": "docs",
    "src": "src",
    "test": "test",
    "user": "user",
    "data": "user/posts",
    "htdocs": "htdocs",
    "theme": "htdocs/themes"
  },
  "author": "Frank BoÃ«s",
  "license": "MIT",
  "dependencies": {
    "chalk": "^1.1.3",
    "dateformat": "^2.0.0",
    "fs-extra-promise": "^0.4.0",
    "glob": "^7.0.5",
    "gm": "^1.23.0",
    "inquirer": "^2.0.0",
    "marked": "^0.3.6",
    "mustache": "^2.2.1",
    "promise": "^7.1.1",
    "shelljs": "^0.7.3",
    "yamljs": "^0.2.8"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "globals": {},
    "rules": {
      "brace-style": 2,
      "comma-dangle": [
        2,
        "never"
      ],
      "comma-spacing": [
        2,
        {
          "before": false,
          "after": true
        }
      ],
      "curly": 2,
      "eqeqeq": 2,
      "func-call-spacing": [
        2,
        "never"
      ],
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "key-spacing": [
        2,
        {
          "beforeColon": false,
          "mode": "minimum"
        }
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "no-console": 0,
      "no-undef": 2,
      "no-unused-vars": 2,
      "semi": [
        2,
        "always"
      ],
      "space-before-function-paren": [
        2,
        "never"
      ],
      "strict": [
        2,
        "safe"
      ],
      "no-loop-func": 2,
      "no-multi-str": 2
    },
    "extends": [
      "eslint:recommended"
    ]
  },
  "engine": "node >= 0.12.0"
}
