{
  "name": "blogophon",
  "version": "1.3.0",
  "description": "A Static Site Generator supporting Markdown, responsive images, RSS and other RESTable files. Built with Node.js and minimal dependencies.",
  "main": "./bin/blogophon",
  "repository": {
    "type": "git",
    "url": "git@github.com:fboes/blogophon.git"
  },
  "scripts": {
    "start": "node ./bin/blogophon",
    "generate": "node ./bin/blogophon-generate",
    "precommit": "npm test",
    "test": "eslint *.js bin/* src/**/*.js test/**/*.js && nodeunit test --reporter minimal && npm outdated"
  },
  "homepage": "https://github.com/fboes/blogophon",
  "bugs": {
    "url": "https://github.com/fboes/blogophon/issues",
    "email": "info@3960.org"
  },
  "author": "Frank BoÃ«s <info@3960.org> (https://3960.org/)",
  "preferGlobal": true,
  "keywords": [
    "blog",
    "markdown",
    "mustache",
    "gulp",
    "static site generator"
  ],
  "devDependencies": {
    "autoprefixer": "^7.0.1",
    "beepbeep": "^1.2.0",
    "gulp": "^3.9.1",
    "gulp-eslint": "^4.0.0",
    "gulp-live-server": "0.0.31",
    "gulp-nodeunit": "0.1.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^7.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.6.1",
    "gulp-sass": "^3.0.0",
    "gulp-uglify": "^3.0.0",
    "husky": "^0.14.3",
    "js-yaml": "^3.8.3",
    "nodeunit": "^0.11.0"
  },
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "bin": "bin",
    "test": "test",
    "user": "user",
    "data": "user/posts",
    "htdocs": "htdocs",
    "theme": "htdocs/themes"
  },
  "license": "MIT",
  "dependencies": {
    "dateformat": "^3.0.2",
    "fs-extra-promise": "^1.0.1",
    "glob": "^7.0.5",
    "gm": "^1.23.0",
    "inquirer": "^4.0.0",
    "8fold-marked": "^0.3.6",
    "mustache": "^2.2.1",
    "promise": "^8.0.0",
    "remove-markdown": "^0.2.0",
    "shelljs": "^0.7.3",
    "yamljs": "^0.3.0"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6
    },
    "globals": {},
    "rules": {
      "brace-style": 2,
      "comma-dangle": [
        2,
        "never"
      ],
      "comma-spacing": [
        2,
        {
          "before": false,
          "after": true
        }
      ],
      "curly": 2,
      "eqeqeq": 2,
      "func-call-spacing": [
        2,
        "never"
      ],
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "key-spacing": [
        2,
        {
          "beforeColon": false,
          "mode": "minimum"
        }
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "no-console": 0,
      "no-undef": 2,
      "no-unused-vars": 2,
      "semi": [
        2,
        "always"
      ],
      "space-before-function-paren": [
        2,
        "never"
      ],
      "strict": [
        2,
        "safe"
      ],
      "no-loop-func": 2,
      "no-multi-str": 2,
      "valid-jsdoc": [
        1
      ],
      "no-var": 2
    },
    "extends": [
      "eslint:recommended"
    ]
  },
  "engine": {
    "node": ">=6"
  }
}
