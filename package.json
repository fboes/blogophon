{
  "name": "blogophon",
  "version": "2.2.0",
  "description": "A Static Site Generator supporting Markdown, responsive images, RSS and other RESTable files. Built with Node.js and minimal dependencies.",
  "main": "./bin/blogophon",
  "repository": {
    "type": "git",
    "url": "git@github.com:fboes/blogophon.git"
  },
  "scripts": {
    "start": "node ./bin/blogophon",
    "generate": "node ./bin/blogophon-generate",
    "precommit": "eslint *.js bin/* lib/**/*.js test/**/*.js && mocha && stylelint htdocs/**/*.scss",
    "test": "eslint *.js bin/* lib/**/*.js test/**/*.js && mocha && stylelint htdocs/**/*.scss && npm outdated"
  },
  "homepage": "https://github.com/fboes/blogophon",
  "bugs": {
    "url": "https://github.com/fboes/blogophon/issues",
    "email": "info@3960.org"
  },
  "author": "Frank BoÃ«s <info@3960.org> (https://3960.org/)",
  "preferGlobal": true,
  "keywords": [
    "blog",
    "markdown",
    "mustache",
    "gulp",
    "static site generator"
  ],
  "devDependencies": {
    "autoprefixer": "^10.2.4",
    "browser-sync": "^2.26.14",
    "eslint": "^7.21.0",
    "gulp": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "gulp-mocha": "^8.0.0",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^5.0.0",
    "gulp-stylelint": "^13.0.0",
    "gulp-uglify": "^3.0.2",
    "husky": "^7.0.0",
    "mocha": "^9.0.1",
    "stylelint": "^13.11.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.19.0"
  },
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "bin": "bin",
    "test": "test",
    "user": "user",
    "data": "user/posts",
    "htdocs": "htdocs",
    "theme": "htdocs/themes"
  },
  "license": "MIT",
  "dependencies": {
    "dateformat": "^4.5.1",
    "fs-extra-promise": "^1.0.1",
    "glob": "^7.1.6",
    "gm": "^1.23.1",
    "handlebars": "^4.7.7",
    "inquirer": "^8.0.0",
    "inquirer-datepicker-prompt": "^0.4.2",
    "js-yaml": "^4.0.0",
    "marked": "^3.0.2",
    "shelljs": "^0.8.4"
  },
  "engine": {
    "node": ">=6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended-scss",
    "rules": {
      "no-descending-specificity": null,
      "no-empty-source": null
    },
    "ignoreFiles": "**/*.css"
  },
  "browserslist": [
    "cover 97%"
  ]
}
